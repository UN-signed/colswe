<div class="ui two column grid">
  <div class="login">
    <h1 class="text-center">Iniciar Sesión</h1>
    <hr class="primary">

    <div class="links text-center">
      ¿Nuevo en SmartHub?
      <%= render "users/shared/links" %>
    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form"}) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", :placeholder => 'Contraseña' %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="ui checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :recordarme %>
      </div>
    </div>
    <% end -%>

    <div class="actions">
      <center>
        <%= f.submit "Iniciar Sesión", :class => 'ui teal button' %>
      </center>
    </div>
    <% end %>

    <div class="links text-center">
      <%= render "users/shared/forgot_pass" %>
    </div>
  </div>

  <div class="socials">
    <button class="ui red button">
      <i class="google icon"></i>
      Iniciar con Google
    </button>
    <button class="ui blue button">
      <i class="facebook icon"></i>
      Iniciar con Facebook
    </button>
  </div>
</div>
