<div class="ui secondary menu">
  <%= link_to image_tag("https://react.semantic-ui.com/logo.png"), {controller: '/home'}, {class: 'item'} %>
  <div class="item" style="margin-left:-15px;">
    <%= link_to(raw('<h2 class="ui logo header">SmartHub</h2>'), '/home') %>
  </div>

  <div class="right menu">
    <div class="item">
      <a class="ui button" href="<%=new_user_session_path%>">Inicio Sesión</a>
    </div>
    <div class="item">
      <a class="ui teal button" href="<%=new_user_registration_path%>">Registro</a>
    </div>
  </div>
</div>

<div class="login">
  <h1 class="text-center">Cambia tu contraseña</h1>
  <hr class="primary">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "ui form" }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <!-- <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %> -->
      <%= f.password_field :password, autofocus: true, autocomplete: "off", :placeholder => 'Nueva Contraseña' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirmar Nueva Contraseña' %>
    </div>

    <div class="actions">
      <center>
      <%= f.submit "Cambiar mi Contraseña", :class => 'ui teal button' %>
    </center>
    </div>
  <% end %>
</div>
