<p id="notice"><%= notice %></p>

<h1>Research Lines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @research_lines.each do |research_line| %>
      <tr>
        <td><%= research_line.name %></td>
        <td><%= research_line.description %></td>
        <td><%= link_to 'Show', research_line %></td>
        <td><%= link_to 'Edit', edit_research_line_path(research_line) %></td>
        <td><%= link_to 'Destroy', research_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Research Line', new_research_line_path %>
