<p id="notice"><%= notice %></p>

<h1>Research Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Administrator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @research_groups.each do |research_group| %>
      <tr>
        <td><%= research_group.name %></td>
        <td><%= research_group.description %></td>
        <td><%= research_group.administrator_id %></td>
        <td><%= link_to 'Show', research_group %></td>
        <td><%= link_to 'Edit', edit_research_group_path(research_group) %></td>
        <td><%= link_to 'Destroy', research_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

